{
    "manifest_version": 3,
    "name": "KindBot â€“ Supportive Reframer",
    "version": "0.2.0",
    "description": "Reframe selected text into kinder, calmer language.",
    "icons": { "128": "assets/icon128.png" },
    "options_page": "options/models.html",
    "permissions": ["contextMenus", "storage", "activeTab", "scripting", "clipboardWrite"],
    "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  
    "background": { "service_worker": "service_worker.js" },
  
    "action": { "default_popup": "popup/popup.html" },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"],
        "css": ["content/ui.css"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ],
  
    "web_accessible_resources": [
      { "resources": ["content/ui.css", "assets/icon128.png"], "matches": ["<all_urls>"] }
    ]
  }
  